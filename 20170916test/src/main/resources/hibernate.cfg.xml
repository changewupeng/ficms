<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE 
hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!--自动建表，范例用-->
    <!--
    <property name="hibernate.hbm2ddl.auto">update</property>
    -->
    <property name="jdbc.batch_size">25</property>
    <property name="jdbc.fetch_size">50</property>
    <property name="show_sql">true</property>
    <property name="javax.persistence.validation.mode">none</property>

    <mapping resource="com/fioms/bean/AccountinfoVO.hbm.xml"/>
    <mapping resource="com/fioms/bean/CostinfoVO.hbm.xml"/>
    <mapping resource="com/fioms/bean/SysDmbmDicVO.hbm.xml"/>
    <mapping resource="com/fioms/bean/UserVO.hbm.xml"/>
    <mapping resource="com/fioms/bean/IncomeInfoVO.hbm.xml"/>
    <mapping resource="com/fioms/bean/BusinessCardInfoVO.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
